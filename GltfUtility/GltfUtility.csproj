<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Version>0.5.3</Version>
    <PackAsTool>true</PackAsTool>
    <AssemblyName>nrs-gltf</AssemblyName>
    <PackageId>nrs-gltf</PackageId>
    <ToolCommandName>nrs-gltf</ToolCommandName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Nursia3D/GltfUtility</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\ThirdParty\glTFLoader\**\*.cs" LinkBase="glTFLoader" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="MikkTSpaceSharp" Version="0.5.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
</Project>
